{
  "rewrites": [
    {
      "source": "/",
      "destination": "/api/index"
    },
    {
      "source": "/home",
      "destination": "/api/index"
    },
    {
      "source": "/category/:category/page/:page",
      "destination": "/api/category?category=:category&page=:page"
    },
    {
      "source": "/category/:category",
      "destination": "/api/category?category=:category"
    },
    {
      "source": "/series/page/:page",
      "destination": "/api/series_page?page=:page"
    },
    {
      "source": "/series",
      "destination": "/api/series_page"
    },
    {
      "source": "/movies/page/:page",
      "destination": "/api/movies_page?page=:page"
    },
    {
      "source": "/movies/:path",
      "destination": "/api/movies?path=:path"
    },
    {
      "source": "/movies",
      "destination": "/api/movies_page"
    },
    {
      "source": "/letter/:letter/page/:page",
      "destination": "/api/letter?letter=:letter&page=:page"
    },
    {
      "source": "/letter/:letter",
      "destination": "/api/letter?letter=:letter"
    },
    {
      "source": "/api/proxy",
      "destination": "/api/proxy"
    },
    {
      "source": "/:path*",
      "destination": "/api/proxy?path=/:path*"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  }
}
